		<script>
        document.getElementById("searchForm").addEventListener("submit", function (event) {
            //  varsayılan davranışı durdurur ve yerine JavaScript tarafından belirttiğimiz  işlevi çalıştırır.
            event.preventDefault();  // form ile  sunucuya veriyi göndermeye çalıştığımda  bu kısım   tetiklenicek ve içindeki işlev çalışacak

            var searchKeyword = document.getElementsByName("keyword")[0].value;  //inputu aldık. fetch: ile sunucuya istek gönderdik.
          

            //encodeURIComponent ile  verilen bir metin dizisindeki özel karakterleri, onların URL kodunu oluşturan karakterlere çevirir. 
            fetch(`/Default/Search?keyword=${encodeURIComponent(searchKeyword)}`)
                .then(response => response.json())  //sunucudan gelen yanıtı JSON formatına dönüştürmek için 
                .then(data => {  //  gelen verileri data  değişkeninde tuttuk.
                    console.log(data);
                    
                    var searchResultTable = document.getElementById("searchResult").getElementsByTagName("tbody")[0];  // tbody :  HTML tablolarının içeriğini tanımlamak için kullanılan bir etikettir. 
                    searchResultTable.innerHTML = "";  // tablonun içeriği temizlenir,  yeni sonuçlar eklenir
                    data.forEach(item => {  // JSON verileri üzerinde döngü oluşturdum.
                        var row = searchResultTable.insertRow();
                        row.insertCell().innerText = item.brand;
                        row.insertCell().innerText = item.plateprefix;
                        row.insertCell().innerText = item.shifttype;
                        row.insertCell().innerText = item.fuel;
                        row.insertCell().innerText = item.casetype;
                    });
                });
        });
    </script>

